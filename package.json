{
  "name": "twreedat",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "wrangler pages dev dist --d1=twreedat-production --local --ip 0.0.0.0 --port 3000",
    "build:client": "vite build --outDir dist",
    "build:worker": "node build-worker.js",
    "build": "npm run build:client && npm run build:worker",
    "preview": "wrangler pages dev dist --d1=twreedat-production --local",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name twreedat",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply twreedat-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply twreedat-production",
    "db:seed": "wrangler d1 execute twreedat-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "hono": "^4.11.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
